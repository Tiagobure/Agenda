<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="718.0" prefWidth="926.0" style="-fx-background-color: #F4F6F9;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.MainViewController">

    <!-- Top Section -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: #1565C0; -fx-padding: 15 15 15 30; -fx-border-width: 0 0 2 0; -fx-border-color: #FFA726;">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 5, 0, 0, 1);" text="AGENDA DO ESTUDANTE">
            <font>
               <Font name="DejaVu Serif Condensed Bold" size="12.0" />
            </font></Label>
            <Button fx:id="btSearch" onAction="#openSearchAction" style="-fx-background-color: transparent; -fx-font-size: 16px; -fx-text-fill: white; -fx-cursor: hand;" text="🔍">
                <tooltip>
                    <Tooltip text="Pesquisar" />
                </tooltip>
            </Button>
        </HBox>
    </top>

    <!-- Left Navigation -->
    <left>
        <VBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #FFA726; -fx-padding: 20 10 20 10; -fx-border-width: 0 2 0 0; -fx-border-color: #1565C0; -fx-background-radius: 0 10 10 0; -fx-border-radius: 0 10 10 0;">
            <Button fx:id="btSummary" onAction="#openSumaryAction" style="-fx-background-color: #1565C0; -fx-text-fill: white; -fx-font-size: 13px; -fx-pref-width: 150px; -fx-padding: 8px; -fx-border-radius: 4px; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 5, 0, 0, 1);">
                <tooltip>
                    <Tooltip text="Acesse seus resumos de estudo" />
                </tooltip>
                <text>Resumos</text>
            </Button>
            <Button fx:id="btKeyWord" onAction="#openKeyWordAction" style="-fx-background-color: #1565C0; -fx-text-fill: white; -fx-font-size: 13px; -fx-pref-width: 150px; -fx-padding: 8px; -fx-border-radius: 4px; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 5, 0, 0, 1);">
                <tooltip>
                    <Tooltip text="Acesse suas palavras-chave" />
                </tooltip>
                <text>Palavras-Chave</text>
            </Button>
            <Button fx:id="btSchedule" onAction="#openScheduleAction" style="-fx-background-color: #1565C0; -fx-text-fill: white; -fx-font-size: 13px; -fx-pref-width: 150px; -fx-padding: 8px; -fx-border-radius: 4px; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 5, 0, 0, 1);">
                <tooltip>
                    <Tooltip text="Acesse seu cronograma" />
                </tooltip>
                <text>Cronograma</text>
            </Button>
        </VBox>
    </left>

    <!-- Área de Conteúdo Dinâmico -->
    <center>
        <StackPane fx:id="contentArea" style="-fx-padding: 20;">
            <!-- Placeholder Inicial -->
            <VBox alignment="CENTER" spacing="15">
                <Label style="-fx-font-size: 20px; -fx-text-fill: #333;" text="Bem-vindo à Agenda do Estudante!" />
                <Label style="-fx-font-size: 14px; -fx-text-fill: #666;" text="Selecione uma opção no menu para começar." />
                <ImageView fitHeight="200" fitWidth="200">
                    <Image url="@../gui/JavaImagem.png" />
                </ImageView>
            </VBox>
        </StackPane>
    </center>

    <!-- Footer -->
    <bottom>
        <HBox alignment="CENTER" prefHeight="20.0" prefWidth="926.0" style="-fx-background-color: #1565C0; -fx-padding: 8;">
            <Label style="-fx-font-size: 12px; -fx-text-fill: white;" text="Desenvolvido por " />
            <Hyperlink onAction="#openDeveloperLink" style="-fx-font-size: 12px; -fx-text-fill: white; -fx-underline: false;" text="Tiago Palma" />
        </HBox>
    </bottom>

</BorderPane>
