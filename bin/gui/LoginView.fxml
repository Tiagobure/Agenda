<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?xml-model href=""?>

<VBox alignment="CENTER" spacing="12" style="-fx-padding: 25; -fx-background-color: #F4F6F9;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.LoginViewController">

    <!-- Título -->
    <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #1565C0;" text="Bem-vindo!" />

    <!-- Campo Nome de Usuário -->
    <VBox alignment="CENTER" spacing="3">
        <Label style="-fx-font-size: 14px; -fx-text-fill: #333;" text="Usuário" />
        <TextField fx:id="txtname" promptText="Digite seu usuário" style="-fx-pref-width: 260px; -fx-font-size: 14px; -fx-background-color: #ffffff;                     -fx-border-radius: 6px; -fx-border-color: #bbb;                     -fx-padding: 8px; -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.1), 5, 0, 0, 1);" />
    </VBox>

    <!-- Campo Senha -->
    <VBox alignment="CENTER" spacing="3">
        <Label style="-fx-font-size: 14px; -fx-text-fill: #333;" text="Senha" />
        <PasswordField fx:id="passwordField" promptText="Digite sua senha" style="-fx-pref-width: 260px; -fx-font-size: 14px; -fx-background-color: #ffffff;                     -fx-border-radius: 6px; -fx-border-color: #bbb;                     -fx-padding: 8px; -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.1), 5, 0, 0, 1);" />
    </VBox>

    <!-- Botões -->
    <VBox spacing="10">
        <Button fx:id="btLogin" onAction="#onLogin" onMouseEntered="#hoverLogin" onMouseExited="#normalLogin" style="-fx-background-color: #1565C0; -fx-text-fill: white; -fx-font-size: 14px;                    -fx-pref-width: 260px; -fx-padding: 10px; -fx-border-radius: 6px;                    -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.2), 5, 0, 0, 1);" text="Entrar" />

        <Button fx:id="btRegister" onAction="#RegistrationUser" onMouseEntered="#hoverRegister" onMouseExited="#normalRegister" style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-size: 14px;                    -fx-pref-width: 260px; -fx-padding: 10px; -fx-border-radius: 6px;                    -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.2), 5, 0, 0, 1);" text="Cadastrar" />
    </VBox>

</VBox>
